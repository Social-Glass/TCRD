
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>

<style>

    body {
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #e5e5e5;
    }
    .au-btn {
        background-color: #d62828 !important;
    }

    #olvide {
        color: #666 !important;
    }

    .container {
        display: flex;
    }

    .form-container, .image-container {
        flex: 1;
    }

    .form-container {
        background-color: #f5f5f5;
    }

    .image-container {
        background-color: #e0e0e0;
        display: flex;
           
    }

        .image-container img {

            min-height: 80vh;
            max-height: 80vh;

        }
</style>
<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Tribunal Constitucional</title>

    <!-- Fontfaces CSS-->
    <link href="~/Content/styles/font-face.css" rel="stylesheet" />
    <link href="~/Content/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" />
    <link href="~/Content/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Vendor CSS-->
    <link href="~/Content/vendor/animsition/animsition.min.css" rel="stylesheet" />
    <link href="~/Content/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all" />
    <link href="~/Content/vendor/wow/animate.css" rel="stylesheet" />
    <link href="~/Content/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all" />
    <link href="~/Content/vendor/slick/slick.css" rel="stylesheet" media="all" />
    <link href="~/Content/vendor/select2/select2.min.css" rel="stylesheet" media="all" />
    <link href="~/Content/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" />
    <!-- Main CSS-->
    <link href="~/Content/styles/theme.css" rel="stylesheet" />
</head>



<body class="animsition" style="height: 100vh; background-color: #e5e5e5;">

    <div class="page-content--bge5">
        <div class="container" style="margin-top: 60px;" >
            <div class="form-container" style="min-height: 80vh; max-height: 80vh; max-width: 450px;">
                <div class="login-content">
                    <div class="login-logo mt-3">
                        <a href="#">
                            <img width="50%" src="https://res.cloudinary.com/djgjgies2/image/upload/v1698122937/TribunalConstitucional/vgqeopjzwozxfuwcaevl.png" alt="Tribunal Constitucional">
                        </a>
                    </div>
                    <div style=" padding: 25px;">
                        <center>
                            <h4 style="margin-bottom: 10px;">Bienvenido a tu portal.</h4>
                            <p style="font-size: 11px">Aquí podrás generar sentencias para tus públicaciones</p>

                        </center>
                    </div>
                    <div class="login-form">
                        @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "au-form au-form--border" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <input class="au-input au-input--full" type="email" name="email" placeholder="Correo Electrónico">
                            </div>
                            <div class="form-group">
                                <input class="au-input au-input--full" type="password" name="password" placeholder="*********">
                            </div>
                            <div class="login-checkbox">
                                <label style="font-size: 12px;">
                                    <input type="checkbox" name="remember">Recordarme
                                </label>
                                <label>
                                    <a id="olvide" href="#" style="font-size: 12px;">Olvidaste tu contraseña?</a>
                                </label>
                            </div>
                            <center>
                                <button class="au-btn au-btn--block au-btn--green mt-5 " type="submit">Entrar</button>

                            </center>
                        }
                    </div>
                </div>
            </div>
            <div class="image-container" style="background-color: #e5e5e5; max-width: 450px;">
                <img src="https://dominicanalifestyle.com/wp-content/uploads/2021/08/Plaza-de-La-Bandera.jpg" alt="Imagen">
            </div>
        </div>
    </div>

    <!-- Jquery JS-->

    <script src="~/Content/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/Content/vendor/slick/slick.min.js"></script>
    <script src="~/Content/vendor/wow/wow.min.js"></script>
    <script src="~/Content/vendor/animsition/animsition.min.js"></script>
    <script src="~/Content/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <script src="~/Content/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/Content/vendor/counter-up/jquery.counterup.min.js"></script>
    <script src="~/Content/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/Content/vendor/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/Content/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/Content/vendor/select2/select2.min.js"></script>
    <!-- Main JS-->
    <script src="~/Scripts/main.js"></script>
</body>
